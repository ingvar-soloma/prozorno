{
  "$schema": "https://developer.microsoft.com/json-schemas/rush/v5/rush.schema.json",
  "rushVersion": "5.100.1",
  "pnpmVersion": "8.6.9",
  "projectFolderMaxDepth": 3,
  "suppressNodeLtsWarning": true,
  "ensureConsistentVersions": true,
  "projects": [
    {
      "packageName": "@prozorno/website",
      "projectFolder": "apps/website"
    },
    {
      "packageName": "@prozorno/backend",
      "projectFolder": "apps/backend"
    },
    {
      "packageName": "@internal/builder",
      "projectFolder": "common/tools/builder",
      "shouldPublish": false
    },
    {
      "packageName": "@internal/eslint",
      "projectFolder": "common/tools/eslint",
      "shouldPublish": false
    },
    {
      "packageName": "@internal/scripts",
      "projectFolder": "common/tools/scripts",
      "shouldPublish": false
    },
    {
      "packageName": "@internal/typescript",
      "projectFolder": "common/tools/typescript",
      "shouldPublish": false
    }
  ]
}
